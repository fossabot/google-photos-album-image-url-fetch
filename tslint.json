{
  "rulesDirectory": [ "tslint-plugin-prettier" ],
  "linterOptions": {
    "exclude": [
        "node_modules/**",
        "dist/**"
    ]
  },
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": true,
    "prettier": [
      true, {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120
      }
    ]
  },
  "defaultSeverity": "warning"
}
